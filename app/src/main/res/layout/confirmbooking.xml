<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="15dp"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".ConfirmBooking">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Booking Your Room"
        android:textAlignment="center"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/ChkIn"
        style="@style/NewTheme"
        android:hint="Check In Date" />

    <TextView
        android:id="@+id/ChkOut"
        style="@style/NewTheme"
        android:hint="Check Out Date" />


    <TextView
        android:id="@+id/type_room_booking"
        style="@style/NewTheme"
        android:hint="Select Room Type" />

    <TextView
        android:id="@+id/email_booking"
        style="@style/NewTheme"
        android:hint="Email" />

    <EditText
        android:id="@+id/email_"
        style="@style/NewTheme"
        android:hint="Name" />

    <EditText
        style="@style/NewTheme"
        android:hint="Phone"
        android:inputType="number" />


    <GridLayout
        style="@style/NewTheme"
        android:columnCount="2"
        android:orientation="horizontal"
        android:rowCount="2">

        <TextView
            style="@style/MyStyle"
            android:layout_width="wrap_content"
            android:hint="Adult" />

        <TextView
            style="@style/MyStyle"
            android:layout_width="wrap_content"
            android:hint="Child" />

        <EditText
            android:id="@+id/etAdult"
            style="@style/MyStyle"
            android:layout_width="wrap_content"
            android:hint="0"
            android:inputType="number" />

        <EditText
            android:id="@+id/etChild"
            style="@style/MyStyle"
            android:layout_width="wrap_content"
            android:hint="0"
            android:inputType="number" />
    </GridLayout>

    <Button
        android:id="@+id/btnSubmit"
        style="@style/NewTheme"
        android:background="@drawable/custom_button"
        android:text="Submit" />

</LinearLayout>