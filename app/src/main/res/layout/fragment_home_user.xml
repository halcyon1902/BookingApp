<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffba60"
    tools:context=".userInterface.HomeFragmentUser">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="32dp"
            android:paddingTop="16dp"
            android:paddingRight="32dp"
            android:weightSum="100">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_weight="40"
                android:fontFamily="@font/bariol_bold"
                android:text="@string/hey_what_would_you_like_to_booking_today"
                android:textColor="@color/PrimaryColor"
                android:textSize="30sp"
                app:autoSizeTextType="uniform" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="60"
                android:src="@drawable/refer_icon"
                tools:ignore="ContentDescription,ImageContrastCheck" />
        </LinearLayout>

        <TextView
            android:id="@+id/txtView_Explore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/container_explore"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/bariol_bold"
            android:padding="15dp"
            android:text="@string/explore"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="25sp"
            app:autoSizeTextType="uniform" />

        <TextClock
            android:id="@+id/textClock1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/border_edittext"
            android:format12Hour="dd-MMM-yyyy hh:mm:ss a"
            android:textColor="@color/PrimaryColor"
            android:textSize="25sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:background="@color/white">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                tools:itemCount="5"
                tools:listitem="@layout/main_card" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <TextView
                android:id="@+id/review"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:text="@string/review"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="30sp" />

            <!--            <ImageButton-->
            <!--                android:id="@+id/btn_AddReview"-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:layout_marginStart="10dp"-->
            <!--                android:layout_marginTop="10dp"-->
            <!--                android:layout_marginEnd="10dp"-->
            <!--                android:layout_marginBottom="10dp"-->
            <!--                android:layout_toEndOf="@+id/review"-->
            <!--                android:background="@drawable/create"-->
            <!--                android:scaleType="fitCenter"-->
            <!--                tools:ignore="ContentDescription" />-->

            <TextView
                android:id="@+id/tv_seeall"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"
                android:layout_toEndOf="@id/review"
                android:text="@string/see_all"
                android:textAlignment="textEnd"
                android:textColor="@color/blue_soft"
                android:textSize="15sp" />
        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_review"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:background="@color/white"
            tools:itemCount="5"
            tools:listitem="@layout/review" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>